{
  "name": "red_tetris_boilerplate",
  "version": "1.0.0",
  "description": "This starter kit was made to help students to develop red_tetris project : a Full Stack Javascript Tetris. We can also use it as a starting point for any product made of React / Redux and socket.io.",
  "main": "karma.conf.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@material-ui/core": "^4.3.0",
    "@material-ui/icons": "^4.2.1",
    "material-ui": "^1.0.0-beta.47",
    "mongoose": "^5.6.7",
    "react": "^16.8.6",
    "react-dom": "16.8.6",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "simple-node-logger": "^18.12.23",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "@istanbuljs/nyc-config-babel": "^2.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-watch": "^7.0.0",
    "chai": "^3.5.0",
    "chai-equal-jsx": "^1.0.9",
    "coveralls": "^3.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "glob": "^7.1.4",
    "isparta": "^4.1.1",
    "istanbul": "^0.4.5",
    "jest": "^24.8.0",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^6.2.0",
    "mocha-jsdom": "^2.0.0",
    "nyc": "10.3.2",
    "pm2": "^3.5.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.8.6",
    "ts-node": "^8.3.0",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "scripts": {
    "client-dev": "webpack-dev-server --colors --hot --inline --host 0.0.0.0 --port 8080  ./src/client/index.js --output ./dist/client/bundle.js",
    "client-dist": "NODE_ENV=production webpack --colors --hot --inline --host 0.0.0.0 --port 8080  ./src/client/index.js --output ./dist/client/bundle.js",
    "srv-dev": "DEBUG=tetris:* babel-watch -w src src/server/main.js",
    "srv-dist": "pm2 start --interpreter ./node_modules/@babel/node/bin/babel-node.js --name red_tetris  ./src/server/main.js",
    "test": "jest",
    "coverage": "NODE_ENV=test nyc   mocha",
    "cov": "babel-node node_modules/isparta/bin/isparta cover --report text --report html node_modules/mocha/bin/_mocha -- --reporter dot "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BohdanGres/redtetris.git"
  },
  "nyc": {
    "require": [
      "@babel/polyfill",
      "@babel/register",
      "jsdom-global/register",
      "@babel/preset-env"
    ],
    "cache": false,
    "all": true,
    "include": [
      "src"
    ],
    "extensions": [
      ".js"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "author": "bgres",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BohdanGres/redtetris/issues"
  },
  "homepage": "https://github.com/BohdanGres/redtetris#readme"
}
